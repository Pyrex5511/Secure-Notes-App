<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- farba pozadia kartičky -->
    <solid android:color="#1E1E1E" /> <!-- tmavšia, nech ladí s bielym textom -->

    <!-- border -->
    <stroke
        android:width="1dp"
        android:color="#444444" /> <!-- decentný šedý rámik -->

    <!-- zaoblené rohy -->
    <corners android:radius="12dp" />

    <!-- voliteľne vnútorný padding (ak chceš viac priestoru) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
